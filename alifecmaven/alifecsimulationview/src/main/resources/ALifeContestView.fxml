    </right>

    <bottom>
        <TitledPane text="%alifec.information.title" collapsible="false">
            <padding>
                <Insets right="6" left="6" bottom="6"/>
            </padding>
            <Label fx:id="messagePanel"
                   text="Message Panel"
                   maxWidth="Infinity"
                   style="-fx-padding: 3 3 3 3; -fx-font-weight: bold"/>
        </TitledPane>
