<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>installer</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <unpack>false</unpack>
            <scope>compile</scope>
            <outputDirectory>alifec-${project.version}/lib</outputDirectory>
            <useProjectArtifact>false</useProjectArtifact>
            <useTransitiveFiltering>true</useTransitiveFiltering>
            <includes>
                <include>alifec:alifec-core:jar</include>
                <include>alifec:alifec-simulation-view:jar</include>
                <include>alifec:alifec-util:jar</include>

                <!-- JavaFx dependency -->
                <include>org.openjfx:javafx-controls:jar</include>
                <include>org.openjfx:javafx-fxml:jar</include>
                <include>org.openjfx:javafx-graphics:jar</include>
            </includes>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <directory>../app</directory>
            <excludes>
                <exclude>config</exclude>
            </excludes>
            <outputDirectory>alifec-${project.version}/app</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>bin</directory>
            <outputDirectory>alifec-${project.version}/bin</outputDirectory>
        </fileSet>
        <fileSet>
            <outputDirectory>alifec-${project.version}/data</outputDirectory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <outputDirectory>alifec-${project.version}/log</outputDirectory>
            <excludes>
                <exclude>**/*</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>